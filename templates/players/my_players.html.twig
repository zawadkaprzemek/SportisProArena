{% extends 'base.html.twig' %}

{% block title %}Moi zawodnicy{% endblock %}

{% block body %}


<div class="row">
    <div class="col-12">
        <h1>Moi zawodnicy</h1>

        <div>
            <a href="{{path('app_players_possible_to_assign')}}" class="btn btn-success">Dodaj zawodników</a>
        </div>
        <div class="row px-2">
            {%for assign in players %}
            {%include 'modules/player_box.html.twig' with {'player':assign.player,'with_assign_button':0}%}
            {%else%}
            <div class="col-12">
            <p class="alert alert-info">Brak przypisanych zawodników</p>
            </div>
        {%endfor%}
        </div>
    </div>
</div>
{% endblock %}
