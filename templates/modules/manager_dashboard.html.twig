<div class="col-md-6">
    <div class="row mb-50">
        <div class="col-6">
            <div class="profile-pic-box mb-0">
                <img src="{{asset(user.image)}}" alt="" class="img-fluid profile-pic">
            </div>
        </div>

        <div class="col-6">
            <div class="club-pic-box box h-100">
                <img src="{{asset(user.club.logo)}}" alt="" class="img-fluid club-pic">
            </div>
        </div>
    </div>

    <div class="box info-box">
        <h3>Informacje o zawodniku</h3>
        <div class="row">
          <div class="row">
            <div class="col-5">Imię i nazwisko:</div>
            <div class="col-7">{{user.fullName}}</div>

            <div class="col-5">Kraj:</div>
            <div class="col-7">Polska</div>

            <div class="col-5">Miejscowość:</div>
            <div class="col-7">{{user.city}}</div>
            
            <div class="col-5">Klub:</div>
            <div class="col-7">{{user.club.name}}</div>

            <div class="col-5">Data urodzenia:</div>
            <div class="col-7">{{user.birthDate|date('d.m.Y')}} ({{user.birthDate|user_age}})</div>

            <div class="col-5">Pozycja na boisku:</div>
            <div class="col-7">
                <ul>
                    {%for position in user.position%}
                        <li>{{position.name}}</li>
                    {%endfor%}
                </ul>
            </div>
        </div>  

        </div>
    </div>

</div>

<div class="col-md-6 ">
    <div class="box players-box">
        <h3>Moi zawodnicy</h3>
        <div class="row">

            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Imię i nazwisko</th>
                            <th>Zespół</th>
                            <th>Pozycja</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {%for player in data.players %}
                            <tr>
                                <td><p>{{player.fullName}}</p></td>
                                <td><p>U 12</p></td>
                                <td><p>{{player.positionName}}</p></td>
                                <td><a href="#" class="fw-bold">Zarządzaj</a></td>
                            </td>
                        {%else%}
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-info text-center">Brak przypisanych zawodników</div>
                            </td>
                        </tr>
                        {%endfor%}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
