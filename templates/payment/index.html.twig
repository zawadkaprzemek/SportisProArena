{% extends 'base.html.twig' %}

{% block title %}Dokup jednostki treningowe{% endblock %}

{% block body %}

<div class="row">

    <div class="col-md-12 mt-4">
    {%set tokens=[1,3,5,10,15,25]%}
    <div class="row px-3">
    {%for token in tokens%}
        <div class="col-md-4 border mb-2 pb-2">
            <p>Kup {{token}} jednostek</p>
            <p>Cena: {{token*10}} zł</p>
            <button type="button" class="btn-sm btn-block btn btn-success buy-btn" data-units="{{token}}">Kupuję</button>
        </div>
    {%endfor%}
    </div>
    </div>
</div>
{% endblock %}
