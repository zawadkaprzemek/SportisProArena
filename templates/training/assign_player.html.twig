{% extends 'default/with_navbar.html.twig' %}

{% block title %}Przypisz zawodnika do sesji treningowej{% endblock %}

{% block body %}


    <h3>Przypisz zawodnika do sesji treningowej</h3>

    <div class="row">
        <div class="col-md-9 col-lg-6">
    {{ form_start(form)}}

    <div class="box">
        <div>
            <p>Arena: {{session.arena.name}}  {{session.arena.address}}</p>
            <p>Data: {{session.sessionDate|date('d/m/Y H:i')}}
        </div>
        <div class="form-group row">
            {{form_row(form.player)}}
        </div>
        
    </div>
    <div class="row">
        <div class="col-6 col-md-4">
        {{ form_widget(form.submit) }}
        </div>
        <div class="col-6">
            <a href="{{path('app_training_reserved')}}" class="btn btn-outline-primary">Anuluj</a>
        </div>
    </div>
        
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
