{% extends 'default/with_navbar.html.twig' %}

{% block title %}Profil zawodnika {{player.fullName}}{% endblock %}

{% block body %}

<div class="row">

    <div class="col-md-10 mx-auto mt-4">
    {%include 'modules/player_info.html.twig' with {'user':player}%}

    
    {% if assigned %}
    <ul class="nav">
    <li class="nav-item">
    <a class="nav-link" aria-current="page" href="{{path('app_player_raports',{'id':player.id})}}">Raporty</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" aria-current="page" href="{{path('app_player_card_show',{'id':player.id})}}">Karta zawodnika</a>
    </li>
    <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Zadania</a>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="{{path('app_profile_player_tasks_completed',{'id':player.id})}}">Zrealizowane</a></li>
      <li><a class="dropdown-item" href="{{path('app_profile_player_tasks_to_do',{'id':player.id})}}">Do realizacji</a></li>
    </ul>
    </li>

    <li class="nav-item">
    <a class="nav-link" aria-current="page" href="{{path('app_profile_player_rankings',{'id':player.id})}}">Rankingi</a>
    </li>

    <li class="nav-item">
    <a class="nav-link" aria-current="page" href="{{path('app_profile_player_competitions',{'id':player.id})}}">Konkursy</a>
    </li>
    </ul>
    {%else%}
        <button type="button" class="btn btn-success btn-assign-player" data-player="{{player.id}}">Przypisz zawodnika</button> 
    {%endif%}
    
    </div>
</div>
{% endblock %}
