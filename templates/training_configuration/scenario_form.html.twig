{% extends 'default/with_navbar.html.twig' %}

{% block title %}Scenariusz treningu{% endblock %}

{% block body %}

<div class="row" id="configsPage">
    <div class="col-12">
        <div class="box">
        {{ form_start(form,{'attr':{'id':'trainingScenarioForm'}}) }}
            <div class="row">
                <div class="bg-primary py-2 text-white"><h3 class="mb-0 ">Krok 3</h3></div>

                <div class="col-md-6">
                    <div class="form-group row my-3">
                        <div class="col-12 col-sm-3 col-form-label">{{ form_label(form.seriesCount) }}</div>
                        <div class="col-12 col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text">
                                <button type="button" class="btn btn-secondary btn-change-count btn-minus" data-target="#training_scenario_seriesCount">-</button>
                            </span>
                            {{form_widget(form.seriesCount)}}
                            <span class="input-group-text">
                                <button type="button" class="btn btn-secondary btn-change-count btn-plus" data-target="#training_scenario_seriesCount">+</button>
                            </span>
                        </div>
                        
                        </div>
                    </div>
                </div>
            </div>

        {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
